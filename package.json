{
  "name": "katana2",
  "version": "2.0.0",
  "description": "OWASP SamuraiWTF lab management solution",
  "type": "module",
  "main": "src/cli.ts",
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build:ui": "bun run src/ui/build.ts",
    "build": "bun run build:ui && bun build --compile src/cli.ts --outfile bin/katana",
